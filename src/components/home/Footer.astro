---
import { getCategories } from '../../utils/api.js';
import Supporters from '../Supporters.astro';
import Link from './Link.astro';

type Route = { slug: string; title: string };

const routes: Route[] = await getCategories();
---

<footer class="content">
    <nav class="sections">
        {routes.map((route) => (
            <Link href={`/categorias/${route.slug}`} color="black">
                {route.title}
            </Link>
        ))}
    </nav>
    <Supporters className="home" />
</footer>

<style>
    .content {
        @apply flex flex-col flex-wrap items-center justify-between gap-4 pb-4 bg-gradient-to-tr from-orange-400 to-orange-500 px-4 py-1;
    }

    @media (min-width: 992px) {
        .content {
            @apply fixed top-0 right-0 h-full;
        }
    }

    .icon {
        @apply text-white h-8 w-8 rounded-full bg-orange-500 flex items-center justify-center relative bottom-2 cursor-pointer;
    }

    .sections {
        @apply flex flex-col items-center mt-10 gap-8;
    }
</style>