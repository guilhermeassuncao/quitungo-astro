---
const { href, color = 'link' } = Astro.props;

import flor from '../../images/icon/flor.svg';
---

<a href={href} class={`link ${color}`}>
    <img src={flor.src} alt="Flor" class="icon" />
    <span class="text">
        <slot />
    </span>
</a>

<style>
    .link {
        @apply flex items-start gap-3 text-[1.65rem] font-black;
    }

    .white {
        @apply pl-8 mt-28 text-white transition hover:text-white/75;
    }

    .black {
        @apply text-zinc-800 transition hover:text-zinc-800/75;
    }

    .icon {
        @apply w-10 h-10;
    }

    .text {
        @apply inline-block;
    }

    @media screen and (max-width: 768px) {
        .link {
            @apply text-lg;
        }
    }
</style>