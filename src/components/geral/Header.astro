---
import Logo from '../../components/Logo.astro';
import Nav from './Nav.astro';
---

<header class="content">
    <div class="container">
        <Logo className="header"/>
        <Nav className="header"/>
    </div>
</header>

<style>
    .content {
        @apply bg-slate-50 p-4;
    }

    .container {
        @apply mx-auto flex items-center flex-col gap-8;
    }
</style>
