---
import Logo from '../../components/Logo.astro';
import Supporters from '../Supporters.astro';
import Social from './Social.astro';

const ano = new Date().getFullYear();
---

<footer class="content">
    <div class="container">
        <header class="header">
            <a href="/"><Logo className="footer" /></a>
            <Supporters className="geral" />
        </header>

        <footer class="footer">
            <Social />
            <p class="copyright">
                Copyright Â© {ano}. Todos os direitos reservados.
            </p>
        </footer>
    </div>

    <style>
        .content {
            @apply bg-gradient-to-tr from-orange-400 to-orange-500 mt-auto p-2;
        }

        .container {
            @apply max-w-[96rem] mx-auto px-24 flex flex-col gap-6;
        }

        .header {
            @apply flex items-center justify-between;
        }

        .footer {
            @apply flex justify-between items-center;
        }

        .copyright {
            @apply text-center text-sm text-slate-50;
        }

        @media screen and (max-width: 992px) {
            .container {
                @apply px-16;
            }
        }

        @media screen and (max-width: 768px) {
            .header {
                @apply flex-col gap-6;
            }

            .nav-list {
                @apply flex-col gap-6;
            }
        }

        @media screen and (max-width: 576px) {
            .container {
                @apply px-6;
            }

            .footer {
                @apply flex-col gap-6;
            }
        }
    </style>
</footer>
