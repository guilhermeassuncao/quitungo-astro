---
import Nav from './Nav.astro';

import Image from '../../components/Image.astro';
import Supporters from '../Supporters.astro';
import Social from './Social.astro';

const ano = new Date().getFullYear();
---

<footer class="content">
    <div class="container">
        <header class="header">
            <Image className="footer" />
            <Supporters className="geral" />
        </header>
        <Nav className="footer" />
        <footer class="footer">
            <Social />
            <p class="copyright">
                Copyright Â© {ano}. Todos os direitos reservados.
            </p>
        </footer>
    </div>

    <style>
        .content {
            @apply bg-gradient-to-tr from-orange-500 to-orange-600 mt-auto p-4;
        }

        .container {
            @apply mx-auto px-24 flex flex-col gap-8;
        }

        .header {
            @apply flex items-center justify-around;
        }

        .footer {
            @apply flex justify-around;
        }

        .copyright {
            @apply text-center text-sm text-slate-50;
        }

        @media screen and (max-width: 992px) {
            .container {
                @apply px-16;
            }
        }

        @media screen and (max-width: 768px) {
            .header {
                @apply flex-col gap-6;
            }

            .nav-list {
                @apply flex-col gap-6;
            }
        }

        @media screen and (max-width: 576px) {
            .container {
                @apply px-6;
            }

            .footer {
                @apply flex-col gap-6;
            }
        }
    </style>
</footer>
