---
const { src, alt = 'Imagem', caption = '' } = Astro.props;
---

<figure class="figure">
    <img src={src} class="image" alt={alt} />
    {
        caption && (
            <figcaption class="caption">
                {caption}
            </figcaption>
        )
    }
</figure>

<style>
    .figure {
        @apply text-center;
    }

    .image {
        @apply rounded w-full object-cover;
    }

    .caption {
        @apply mt-2 text-sm text-zinc-400;
    }
</style>
