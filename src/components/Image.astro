---
const { src, alt = 'Imagem', caption = '' } = Astro.props;
---

<figure class="figure">
    <img src={src} class="image" alt={alt} />
    {
        caption && (
            <figcaption class="caption">
                {caption}
            </figcaption>
        )
    }
</figure>

<style>
    .figure {
        @apply flex flex-col items-center gap-2;
    }

    .image {
        @apply rounded md:w-3/4 object-cover;
    }

    .caption {
        @apply text-sm text-zinc-400;
    }
</style>
