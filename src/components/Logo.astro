---
import logo from '../images/quitungo/logo.svg';

const { className } = Astro.props;
---

<img src={logo.src} alt="Quitungo" class={`logo-${className}`} />

<style>
    .logo-home {
        @apply h-[18rem] translate-x-[-2%];
    }

    .logo-header {
        @apply h-36;
    }

    .logo-footer {
        @apply h-20;
    }

    @media screen and (max-width: 992px) {
        .logo-home {
            @apply h-[12rem];
        }
    }

    @media screen and (max-width: 768px) {
        .logo-home {
            @apply h-[10rem];
        }
    }

    @media screen and (max-width: 576px) {
        .logo-home {
            @apply h-[8rem];
        }
    }
</style>